// No return
void mx(int arr[], int n, int idx, int maxi){
    if(idx==n){
        cout<<maxi;
        return;
    };
    if(maxi<arr[idx]) maxi=arr[idx];
    mx(arr,n,idx+1,maxi);
}

// Int return 
int mx2(int arr[], int n, int idx){
    if(idx==n) return INT_MIN;
    return max(arr[idx], mx2(arr,n,idx+1));
}

// Print Max in Array using Recursion 
void printMax(int arr[], int n, int i, int mx){
    if(i==n) {
        cout<<mx;
        return;
    };
    printMax(arr,n,i+1,max(mx,arr[i]));
}
