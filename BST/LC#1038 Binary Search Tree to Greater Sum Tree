https://leetcode.com/problems/binary-search-tree-to-greater-sum-tree/

class Solution {
public:
    int sum = 0;
    void reverseInorder(TreeNode* root){
        if(!root) return;
        reverseInorder(root->right);
        root->val+=sum;
        sum = root->val;
        reverseInorder(root->left);
    }

    TreeNode* bstToGst(TreeNode* root) {
        reverseInorder(root);
        return root;
    }
};
