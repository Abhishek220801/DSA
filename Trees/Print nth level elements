
void printnthLevel(Node* root, int level, int n){
    if(root==NULL) return;
    if(level==n){
        cout<<root->data<<" ";
        return; // to avoid further calls which are unnecessary and make the code unoptimized 
    }
    printnthLevel(root->left,level+1,n);
    printnthLevel(root->right,level+1,n);
}
