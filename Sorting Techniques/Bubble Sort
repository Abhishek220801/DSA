void bubbleSort(int arr[], int n){
    bool swapped;
    for(int i=0;i<n-1;i++){   //for the rounds 
        for(int j=0;j<n-i-1;j++){  //for the swaps 
            if(arr[j]>arr[j+1]){
                swap(arr[j],arr[j+1]);
                swapped=true;
            }
        }
        if (swapped==false)
            break;
    }
}
