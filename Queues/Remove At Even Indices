//zero-based indexing considered (if not - consider 1-based in case of stacks/queues)

void removeAtEven(queue<int> &q){
    int n = q.size();
    for(int i=0; i<n; i++){
        if(i%2==0) q.pop();
        else{
            int x = q.front();
            q.pop();
            q.push(x);
        }
    }
}
