#include <iostream>
#include <string.h>
using namespace std;

int main()
{
    char name[15]="love";
    int s=0, e=strlen(name)-1;
    
    while(s<=e){
        swap(name[s],name[e]);
        s++;
        e--;
    }
    
    cout<<"The reversed name --> "<<name;
}


       -------------------OR--------------------------


//Using function 

void reverseCA(char name[]){
    int s=0, e=strlen(name)-1;
    
    while(s<=e){
        swap(name[s],name[e]);
        s++;
        e--;
    }
}


------------------------OR---------------------------------

char* reverseCA(char name[]){
    int s=0, e=strlen(name)-1;
    
    while(s<=e){
        swap(name[s],name[e]);
        s++;
        e--;
    }
    return name;
}
