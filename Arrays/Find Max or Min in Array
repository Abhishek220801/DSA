int main(){

    int arr[]={3,6,1,8,12,4,5};
    int size = sizeof(arr)/sizeof(arr[0]);

    int maxi = INT_MIN;        //use INT_MAX if it's about finding minimum element or maxi can be initialized with arr[0] as well
    

    for(int i=0;i<size;i++){
        maxi = max(maxi,arr[i]);
    }

    cout<<"The maximum element = "<<maxi;

    return 0;
}
