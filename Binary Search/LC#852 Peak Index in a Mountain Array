https://leetcode.com/problems/peak-index-in-a-mountain-array/

// Unoptimized Linear approach
class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
        int n = arr.size(), idx = -1;
        for(int i=1; i<=n-2; i++){
            if(arr[i]>arr[i-1] && arr[i]>arr[i+1]){
                idx = i;
                break;
            };
        }
        return idx;
    }
};
