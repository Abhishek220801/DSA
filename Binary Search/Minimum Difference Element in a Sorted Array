int minDiff(int arr[], int n, int x){
    int lo = 0, hi = n-1, mid;
    while(lo<=hi){
        mid = lo+(hi-lo)/2;
        if(arr[mid]==x) return arr[mid];
        if(arr[mid]<x) lo = mid+1;
        else hi = mid-1;
    }
    int a = abs(arr[lo]-x);
    int b = abs(arr[hi]-x);
    return min(a,b);
}
