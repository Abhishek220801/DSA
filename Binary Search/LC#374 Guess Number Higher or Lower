https://leetcode.com/problems/guess-number-higher-or-lower/

class Solution {
public:
    int guessNumber(int n) {
        int l = 1, r = n;
        while(l<=r){
            int guess_no = l+(r-l)/2;
            int val = guess(guess_no);

            if(val==0) return guess_no;
            if(val==-1) r = guess_no-1;
            else l = guess_no+1;
        }    
        return -1;
    }
};
